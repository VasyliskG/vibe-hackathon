# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Assignment Algorithm
DISTANCE_THRESHOLD=1.0
USE_PATHFINDING=true

# Map Generation
MAP_SIZE=100
WALL_PROBABILITY=0.3

# Data Storage
DATA_DIR=./data

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MAX=100

# Stage 5 - Realtime / Auth
JWT_SECRET=change-me
JWT_ISSUER=vibe-dispatch
JWT_AUDIENCE=vibe-clients
WS_PATH=/ws
WS_PING_INTERVAL_MS=25000
WS_PING_TIMEOUT_MS=5000
SLA_QUEUE_WAIT_MS=600000
SLA_DELIVERY_MS=2700000
SLA_LOAD_IMBALANCE_RATIO=2.5
SIM_MAX_ORDERS=10000
SIM_MAX_COURIERS=500
METRICS_WINDOW_MS=60000
